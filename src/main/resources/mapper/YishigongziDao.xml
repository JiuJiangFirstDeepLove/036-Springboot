<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.YishigongziDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.YishigongziEntity" id="yishigongziMap">
        <result property="yishigonghao" column="yishigonghao"/>
        <result property="yishixingming" column="yishixingming"/>
        <result property="jibengongzi" column="jibengongzi"/>
        <result property="quanqinjiang" column="quanqinjiang"/>
        <result property="pingjigongzi" column="pingjigongzi"/>
        <result property="koukuanjine" column="koukuanjine"/>
        <result property="shifagongzi" column="shifagongzi"/>
        <result property="beizhu" column="beizhu"/>
        <result property="riqi" column="riqi"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.YishigongziVO" >
		SELECT * FROM yishigongzi  yishigongzi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.YishigongziVO" >
		SELECT  yishigongzi.* FROM yishigongzi  yishigongzi 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.YishigongziView" >

		SELECT  yishigongzi.* FROM yishigongzi  yishigongzi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.YishigongziView" >
		SELECT * FROM yishigongzi  yishigongzi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM yishigongzi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM yishigongzi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM yishigongzi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM yishigongzi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM yishigongzi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
</mapper>
